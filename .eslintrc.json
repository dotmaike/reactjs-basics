{
	"extends": ["eslint-config-airbnb", "prettier", "prettier/react"],

	"plugins": ["react", "prettier"],

	"parser": "babel-eslint",

	"parserOptions": {
		"ecmaVersion": 2016,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
		"ecmaFeatures": {
      "jsx": true,
			"modules": true,
			"destructuring": true,
			"classes": true,
			"forOf": true,
			"blockBindings": true,
			"arrowFunctions": true
    }
  },

	"settings": {
		"ecmascript": 6
	},

	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},

	"rules": {
		"indent": 2,
		"func-style": 0,
		"func-names": 0,
		"comma-dangle": 0,
		"no-console": 0,
		"no-param-reassign": 0,
		"linebreak-style": 0,
		"object-shorthand": 0,
		"no-underscore-dangle": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-unresolved": 0,
		"import/extensions": 0,
		"react/jsx-filename-extension": 0,
		"react/prefer-stateless-function": 0,
		"react/no-children-prop": 0,
		"react/forbid-prop-types": 0,
		"prettier/prettier": ["error", {"trailingComma": "es6", "singleQuote": true, "printWidth": 120, "tabWidth": 2}]
	}
}